doctype html
html
  head
    title Editar Turno
    link(rel="stylesheet" href="/css/secretariaEditarTurno.css")
    link(rel="stylesheet" href="/css/footer.css")
    link(rel="stylesheet" href="/css/secretariaEditarTurno.css")
    link(rel="stylesheet" href="/css/headerSecretaria.css")

  body(class="secretariaEditarTurno")
    include ../includes/headerSecretaria
    main(class="mainContent")
      h1(class="titulo") Editar Estado del Turno

      form(action=`/turnos/editar/${turno.id}` method="POST" class="formEditarTurno")
        ul(class="detalleTurno")
          li(class="detalleItem") Paciente: #{turno.paciente_nombre}
          li(class="detalleItem") DNI: #{turno.dni}
          li(class="detalleItem") Profesional: #{turno.nombre_medico} / #{turno.especialidad}
          li(class="detalleItem") Fecha: #{turno.fechaFormateada}
          li(class="detalleItem") Hora: #{turno.horaFormateada}
          li(class="detalleItem")
            label(for="estado" class="estadoLabel") Estado:
            select(name="estado" id="estado" required class="estadoSelect")
              - const estados = ['No disponible','Libre','Reservada','Confirmado','Cancelado','Ausente','Presente','En consulta','Atendido'];
              each estado in estados
                if estado === turno.estado
                  option(value=estado selected)= estado
                else
                  option(value=estado)= estado
          if turno.dni_foto_url
            li(class="detalleItem") DNI Foto:
              a(href=turno.dni_foto_url target="_blank" class="dniFotoLink")
                img(src=turno.dni_foto_url alt="DNI Foto" class="dniFoto" width="400" height="200")
          else
            li(class="detalleItem") Foto del DNI no disponible

        button(type="submit") Guardar cambios

      a(href="/turnos/listarTurnos") ‚Üê Volver a turnos
    include ../includes/footer
    script(src="/js/logout.js")