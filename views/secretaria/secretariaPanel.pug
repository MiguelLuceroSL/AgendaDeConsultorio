doctype html
html
  head
    title Secretaria Panel
    link(rel="stylesheet" href="/css/secretaria.css")
  body
    header
      a(href="http://localhost:3000/secretaria/home" rel="noopener noreferrer"): img(src="/img/agenda.png" alt="" class="logoHeader")
      nav 
        ul(class="ulHeader")
          li: a(href="/turnos/listarTurnos") Ver Turnos
          li: a(href="/turnos/listarProfesionales") Sacar Turnos
          li: a(href="javascript:void(0);" id="logoutButton") Cerrar Sesión
    h1 ¡Bienvenida, secretaria!
    h2 Lista de Turnos
    section.sectionMain
      if turnos && turnos.length
        table.tableTurnos
          thead
            tr
              th Turno para
              th Médico
              th Fecha
              th Hora
              th Observación
          tbody
            each turno in turnos
              tr
                td= turno.paciente_nombre
                td= turno.profesional_especialidad
                td= turno.fecha
                td= turno.hora
                td= turno.detalle_turno
            else
              p No hay turnos disponibles
    include includes/footer
    script(src="/js/logout.js")